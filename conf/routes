# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /stations                   controllers.Application.stations
GET     /stations/:id               controllers.Application.station(id: Int)
GET     /stationList                controllers.Application.stationList(filter ?= "")
GET     /stations/:id/history       controllers.Application.history(id: Int, from: Long ?= 0, to: Long ?= Long.MaxValue)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
